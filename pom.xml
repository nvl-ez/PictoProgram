<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>nvl</groupId>
    <artifactId>Compilador</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <exec.mainClass>com.mycompany.compilador.Compilador</exec.mainClass>
    </properties>

    <dependencies>
        <!--
          Use normal (default) scope and coordinates for java-cup-runtime;
          We'll let the maven-install-plugin handle making this jar available locally.
        -->
        <dependency>
            <groupId>java-cup</groupId>
            <artifactId>java-cup-runtime</artifactId>
            <version>11b-20160615</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- This plugin will automatically install your local jar into each user's local repo
                 when they run "mvn compile" or any phase after 'initialize', so it resolves cleanly. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <id>install-local-cup</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${project.basedir}/utils/Cup/java-cup-11b-runtime.jar</file>
                            <groupId>java-cup</groupId>
                            <artifactId>java-cup-runtime</artifactId>
                            <version>11b-20160615</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- If you want to run this via "mvn exec:java -Dexec.mainClass=..." you can use: -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <mainClass>com.mycompany.compilador.Compilador</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
